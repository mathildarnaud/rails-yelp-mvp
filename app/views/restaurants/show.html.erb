<h1> <%= @restaurant.name %></h1>
<p><%=  @restaurant.address %></p>
<p><%=  @restaurant.category %></p>

<p><strong>Reviews</strong></p>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>
<br>

<h1>New review for <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <p><%= f.submit "Submit review", class: "btn btn-primary" %></p>
<% end %>

<p><%= link_to 'Back to your restaurants', restaurants_path, class: "btn btn-primary" %></p>
